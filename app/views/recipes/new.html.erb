<h3 class="text-center">New Recipe</h3>
<%= form_with model: @recipe, url: recipes_path do |form| %>
  <div class="form">
    <div class="form-group">
      <%= form.label :name %> <br>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :preparation_time_in_hour %> <br>
      <%= form.number_field :preparation_time, required: true, class: "form-control", step: "any" %>
    </div>

    <div class="form-group">
      <%= form.label :cooking_time_in_hour %> <br>
      <%= form.number_field :cooking_time, required: true, class: "form-control", step: "any" %>
    </div>

    <div class="form-group">
      <%= form.label :public %> <br>
      <%= form.check_box :public %>
    </div>

    <div class="form-group">
      <%= form.label :recipe_description %> <br>
      <%= form.text_area :description, required: true, class: "form-control", rows: "3" %>
    </div>
    <%= form.submit "Add Recipe", class: "btn btn-primary" %>
  </div>
<% end %>