<div class="modal fade" id="foodsModal" tabindex="-1" role="dialog" aria-labelledby="foodsModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="foodsModalLabel">Select Foods</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @foods.each do |food| %>
          <%= form_with model: @recipe_food, url: recipe_foods_path, class: "form-check" do |form| %>
            <%= form.hidden_field :recipe_id, value: recipe.id %>
            <%= form.hidden_field :food_id, value: food.id %>
            <%= food.name %>
            <div class="input-group mb-2">
              <%= form.number_field :quantity, class: "form-control", placeholder: "Quantity", required: true, step: "any" %>
              <div class="input-group-prepend">
                <div class="input-group-text"><%= food.measurement_unit %></div>
              </div>
            </div>
            <%= form.submit "Add Food", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>