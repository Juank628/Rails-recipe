<h1>Foods</h1>
<a href="/foods/new">
  <button type="button" class="btn btn-primary mb-3">Add food</button>
</a>
<table class="table">
  <thead>
    <tr>
      <td>Food</td>
      <td>Measurement unit</td>
      <td>Unit price</td>
      <td>Actions</td>
    </tr>
  </thead>
  <%@foods.each do |food|%>
  <tbody>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td> 
        <%= link_to 'Destroy', "/foods/#{food.id}", data: {:confirm => 'Are you sure?'}, :method => :delete %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
