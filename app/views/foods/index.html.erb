<h3>Available Food Items</h3>
<a href="/foods/new">
  <button type="button" class="btn btn-primary mb-3 float-right">Add food</button>
</a>
<table class="table mt-4">
  <thead class="thead-dark">
    <tr>
      <th>Food</th>
      <th>Measurement unit</th>
      <th>Unit price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <%@foods.each do |food|%>
  <tbody>
    <tr class="food-row">
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td> 
        <%= button_to "Delete", "/foods/#{food.id}", method: :delete, data: { confirm: "Are you sure you want to delete this food item?" }, class: "btn btn-danger" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

