<h3 class= "text-center">New Food</h3>
<%= form_with model: @food, url: foods_path do |form| %>
  <div class="form">
    <div class="form-group">
      <%= form.label :name %> <br>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :measurement_unit %> <br>
      <%= form.text_field :measurement_unit, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price %> <br>
      <%= form.text_field :price, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :quantity %> <br>
      <%= form.text_field :quantity, required: true, class: "form-control" %>
    </div>

    <%= form.submit "Add Food", class: "btn btn-primary" %>
  </div>
<% end %>