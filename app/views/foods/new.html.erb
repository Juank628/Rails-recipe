<h1>New Food</h1>
<%= form_with model: @food, url: foods_path do |form| %>
  <div class="form">
    <div class="form-field">
      <%= form.label :name %> <br>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :measurement_unit %> <br>
      <%= form.text_field :measurement_unit, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :price %> <br>
      <%= form.text_field :price, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :quantity %> <br>
      <%= form.text_field :quantity, required: true %>
    </div>

    <%= form.submit %>
  </div>
<% end %>